{
  "format": "page",
  "id": "blogpost",
  "label": "BlogPost",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "subtitle": {
        "type": "StructuredText",
        "config": {
          "label": "Subtitle",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "read_time": {
        "type": "Text",
        "config": {
          "label": "Read time",
          "placeholder": ""
        }
      },
      "published": {
        "type": "Timestamp",
        "config": {
          "label": "Published",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"]
        }
      },
      "tag": {
        "type": "Group",
        "config": {
          "label": "tag",
          "repeat": true,
          "fields": {
            "name": {
              "type": "Link",
              "config": {
                "label": "name",
                "select": "document",
                "customtypes": ["tag"]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "experience": {
              "type": "SharedSlice"
            },
            "advertisement": {
              "type": "SharedSlice"
            },
            "list": {
              "type": "SharedSlice"
            },
            "paragraph": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
